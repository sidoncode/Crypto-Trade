<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202B3F"
    android:padding="10dp"
    android:orientation="vertical">
    <!-->recycler view list coin horizontal<-->




    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_coin_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardBackgroundColor="#283349"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-->recycler market<-->

            <android.support.v4.widget.SwipeRefreshLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swiperl">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_market"
                android:layout_weight="1.0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#37435C"/>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
